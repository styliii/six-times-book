<div class="container">
	<div class="row">
		<div class="span4 offset4 well">
			<legend>Log In</legend>
			  <%= form_tag sessions_path do %>

            <%= text_field_tag :email, params[:email], :placeholder => "Email" %><br>
            <%= password_field_tag :password, params[:password], :placeholder => "Password", :id => "password" %><br>
      			<button type="submit" name="submit" class="btn btn-info btn-block">Submit</button>
        <% end %>   
        <%= link_to "... or Sign Up", sign_up_path %>   
		</div>
	</div>
</div>
