<h1>My Entries</h1>

<table class="table table-bordered">
  <tr>
    <th>Commitment</th>
    <th>Positive</th>
    <th>Negative</th>
    <th>Created</th>
    <th></th>
  </tr>

<% @entries.each do |entry| %>
  <tr>
    <td><%= entry.commitment.sanskrit %></td>
    <td><%= entry.positive %></td>
    <td><%= entry.negative %></td>
    <td><%= time_ago_in_words(entry.created_at)%> ago</td>
    <td><%= link_to 'delete', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Entry', new_entry_path %>
